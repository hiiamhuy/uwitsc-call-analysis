Bootstrap: docker
From: nvcr.io/nvidia/cuda:12.2.2-cudnn8-devel-ubuntu22.04

%labels
    Description "Container for WhisperX + Python 3.10"

%files
    container_artifacts/whisperx/requirements.txt /opt/build/requirements.txt
    container_artifacts/whisperx/wheels /opt/build/wheels

%post
    set -eu

    apt-get update
    apt-get install -y --no-install-recommends \
        python3 python3-pip python3-venv \
        ffmpeg git curl ca-certificates && \
        apt-get clean && rm -rf /var/lib/apt/lists/*

    ln -sf /usr/bin/python3 /usr/bin/python
    ln -sf /usr/bin/pip3 /usr/bin/pip

    if [ -d /opt/build/wheels ]; then
        echo "Found wheels directory, adding to pip search"
        PIP_OPTS="--find-links /opt/build/wheels"
    else
        echo "No wheels directory found, installing from PyPI"
        PIP_OPTS=""
    fi

    pip install --upgrade pip
    pip install $PIP_OPTS -r /opt/build/requirements.txt

    rm -rf /root/.cache/pip

%runscript
    if [ $# -eq 0 ]; then
        exec /bin/bash
    fi
    exec "$@"
